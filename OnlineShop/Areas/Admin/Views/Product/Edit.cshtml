@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Edit";
}
    <h2 class="text-info">Edit @Model.Product</h2>
<form asp-action="Edit" method="post"  enctype="multipart/form-data">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-7">
            <div class="col-5">
                <input asp-for="Id" class="form-control" type="hidden">
            </div>
            <div>
                <img src="~/@Model.Image" style="width:100px;height:100px" />
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product" class="form-control">
                </div>
                <span asp-validation-for="Product" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-5">
                    <input type="number" asp-for="Price" class="form-control" min="0">
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-5">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-5">
                    <input type="file" asp-for="Image" class="form-control">
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-5">
                    <input type="checkbox" asp-for="IsAvailable" class="">
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group pull-right">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a asp-action="Index" class="btn btn-success">Back To List </a>
            </div>
        </div>
       <div class="col-5">

       </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
